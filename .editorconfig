root = true

[*,.gitignore]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,svelte,html,css,scss,json,yml,yaml}]
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{md,MD}]
trim_trailing_whitespace = false
insert_final_newline = true

[Cargo.toml,*.toml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.lock]
trim_trailing_whitespace = false
